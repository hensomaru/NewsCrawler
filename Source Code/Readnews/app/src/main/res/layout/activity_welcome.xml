<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context="com.example.legen.readnews.WelcomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wellcome"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView2" />


    <LinearLayout
        android:id="@+id/btn_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="126dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/wc_login_btn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/login_button2"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/wc_skip_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/skip_button2"
            android:layout_marginTop="20dp"
            android:layout_gravity="center" />
    </LinearLayout>



</RelativeLayout>
